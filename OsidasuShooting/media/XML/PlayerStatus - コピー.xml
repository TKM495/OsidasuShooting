<?xml version="1.0" encoding="utf-8" ?>
<Player>
    <!--プレイヤー共通のステータス-->
    <CommonStatus>
        <!--デフォルトのアーマー値-->
        <DefaultArmorPoint>100</DefaultArmorPoint>
        <!--デフォルトのエネルギー値-->
        <DefaultSkillEnergy>100</DefaultSkillEnergy>
        <!--弾の照準の補正角度-->
        <CorrectAngle>40</CorrectAngle>
        <!--アーマー0の時のノックバック倍率-->
        <ArmorZeroWhenKnockBackMagnification>5</ArmorZeroWhenKnockBackMagnification>
        <!--アーマーの回復速度-->
        <ArmorRecoveryAmount>10</ArmorRecoveryAmount>
        <!--爆弾の照準の移動量-->
        <BombAimMovingDistance>20</BombAimMovingDistance>
        <!--弾の照準線の長さ-->
        <BulletAimLineLength>3</BulletAimLineLength>
        <!--エネルギー取得量-->
        <EnergyGetAmount>5</EnergyGetAmount>
    </CommonStatus>
    <LaserStatus>
        <!--移動速度-->
        <MoveSpeed>20</MoveSpeed>
        <!--ジャンプ量-->
        <JumpAmount>11</JumpAmount>
        <!--ホバー可能時間-->
        <HoverTime>2</HoverTime>
        <!--デフォルトの爆弾の所持数-->
        <DefaultBombCount>5</DefaultBombCount>
        <!--弾の威力-->
        <BulletPower>5</BulletPower>
        <!--爆弾の威力-->
        <BombPower>10</BombPower>
        <!--弾の発射速度-->
        <BulletRateOfFire>0.1</BulletRateOfFire>
        <!--爆弾のリロード速度-->
        <BombReloadSpeed>1</BombReloadSpeed>
        <!--爆弾の飛翔時間-->
        <BombFlightTime>2</BombFlightTime>
    </LaserStatus>
    <MissileStatus>
        <!--移動速度-->
        <MoveSpeed>16</MoveSpeed>
        <!--ジャンプ量-->
        <JumpAmount>9</JumpAmount>
        <!--ホバー可能時間-->
        <HoverTime>2</HoverTime>
        <!--デフォルトの爆弾の所持数-->
        <DefaultBombCount>8</DefaultBombCount>
        <!--弾の威力-->
        <BulletPower>5</BulletPower>
        <!--爆弾の威力-->
        <BombPower>10</BombPower>
        <!--弾の発射速度-->
        <BulletRateOfFire>0.5</BulletRateOfFire>
        <!--爆弾のリロード速度-->
        <BombReloadSpeed>1</BombReloadSpeed>
        <!--爆弾の飛翔時間-->
        <BombFlightTime>2</BombFlightTime>
    </MissileStatus>
    <!--プレイヤーの色（0 ～ 255のRGBA）-->
    <PlayerColor>
        <P1>0,186,255,255</P1>
        <P2>255,0,0,255</P2>
        <P3>255,220,51,255</P3>
        <P4>0,229,68,255</P4>
    </PlayerColor>
</Player>