<?xml version="1.0" encoding="utf-8" ?>
<Player>
    <!--プレイヤー共通のステータス-->
    <CommonStatus>
        <!--デフォルトのエネルギー値-->
        <DefaultEnergy>100</DefaultEnergy>
        <!--弾の照準の補正角度-->
        <CorrectAngle>40</CorrectAngle>
        <!--爆弾の照準の移動量-->
        <BombAimMovingDistance>20</BombAimMovingDistance>
        <!--弾の照準線の長さ-->
        <BulletAimLineLength>3</BulletAimLineLength>
        <!--デフォルトの爆弾の所持数-->
        <DefaultBombCount>5</DefaultBombCount>
        <!--重力-->
        <GravityMagnification>3</GravityMagnification>
    </CommonStatus>
    <LaserStatus>
        <!--移動速度-->
        <MoveSpeed>30</MoveSpeed>
        <!--ジャンプ量-->
        <JumpAmount>12</JumpAmount>
        <!--弾の発射に使用するエネルギー(1発あたり)-->
        <EnergyUseInBulletShot>10</EnergyUseInBulletShot>
        <!--ホバーで消費するエネルギー(毎秒)-->
        <UseEnergyInHover>35</UseEnergyInHover>
        <!--エネルギーの回復速度-->
        <EnergyRecoveryAmount>40</EnergyRecoveryAmount>
        <!--弾の威力-->
        <BulletPower>20</BulletPower>
        <!--爆弾の威力-->
        <BombPower>50</BombPower>
        <!--弾の発射速度-->
        <BulletRateOfFire>0.1</BulletRateOfFire>
        <!--爆弾のリロード速度-->
        <BombReloadSpeed>1</BombReloadSpeed>
        <!--重力-->
        <GravityMagnification>3</GravityMagnification>
        <!--重さ-->
        <Weight>1</Weight>
    </LaserStatus>
    <MissileStatus>
        <!--移動速度-->
        <MoveSpeed>20</MoveSpeed>
        <!--ジャンプ量-->
        <JumpAmount>12</JumpAmount>
        <!--弾の発射に使用するエネルギー(1発当たり)-->
        <EnergyUseInBulletShot>20</EnergyUseInBulletShot>
        <!--ホバーで消費するエネルギー(毎秒)-->
        <UseEnergyInHover>70</UseEnergyInHover>
        <!--エネルギーの回復速度-->
        <EnergyRecoveryAmount>40</EnergyRecoveryAmount>
        <!--弾の威力-->
        <BulletPower>30</BulletPower>
        <!--爆弾の威力-->
        <BombPower>70</BombPower>
        <!--弾の発射速度-->
        <BulletRateOfFire>0.3</BulletRateOfFire>
        <!--爆弾のリロード速度-->
        <BombReloadSpeed>3</BombReloadSpeed>
        <!--重力の倍率-->
        <GravityMagnification>3</GravityMagnification>
        <!--重さ-->
        <weight>3</weight>
    </MissileStatus>
    <!--プレイヤーの色（0 ～ 255のRGBA）-->
    <PlayerColor>
        <P1>0,186,255,255</P1>
        <P2>255,0,0,255</P2>
        <P3>255,220,51,255</P3>
        <P4>0,229,68,255</P4>
    </PlayerColor>
</Player>