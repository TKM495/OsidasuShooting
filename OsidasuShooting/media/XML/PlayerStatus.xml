<?xml version="1.0" encoding="utf-8" ?>
<Player>
    <!--プレイヤー共通のステータス-->
    <CommonStatus>
        <!--デフォルトのエネルギー値-->
        <DefaultEnergy>200</DefaultEnergy>
        <!--弾の照準の補正角度-->
        <CorrectAngle>40</CorrectAngle>
        <!--爆弾の照準の移動量-->
        <BombAimMovingDistance>25</BombAimMovingDistance>
        <!--弾の照準線の長さ-->
        <BulletAimLineLength>3</BulletAimLineLength>
        <!--デフォルトの爆弾の所持数-->
        <DefaultBombCount>5</DefaultBombCount>
        <!--重力-->
        <GravityMagnification>3</GravityMagnification>
        <!--爆弾の威力倍率-->
        <BombPowerDiameter>2.5</BombPowerDiameter>
        <!--シールドの性能が落ちるエネルギーの割合-->
        <ShieldPerformanceIsDownEnergyRate>0.5</ShieldPerformanceIsDownEnergyRate>
    </CommonStatus>
    <LaserStatus>
        <!--移動速度-->
        <MoveSpeed>35</MoveSpeed>
        <!--ジャンプ量-->
        <JumpAmount>14</JumpAmount>
        <!--威力-->
        <Power>20</Power>
        <!--弾の発射速度-->
        <BulletRateOfFire>0.2</BulletRateOfFire>
        <!--爆弾のリロード速度-->
        <BombReloadSpeed>1</BombReloadSpeed>
        <!--重さ-->
        <Weight>1</Weight>
        <!--弾の発射に使用するエネルギー(1発あたり)-->
        <EnergyUseInBulletShot>20</EnergyUseInBulletShot>
        <!--ホバーで消費するエネルギー(毎秒)-->
        <UseEnergyInHover>60</UseEnergyInHover>
        <!--エネルギーの回復速度-->
        <EnergyRecoveryAmount>40</EnergyRecoveryAmount>
        <!--弾のサイズ-->
        <BulletSize>0.5</BulletSize>
    </LaserStatus>
    <MissileStatus>
        <!--移動速度-->
        <MoveSpeed>25</MoveSpeed>
        <!--ジャンプ量-->
        <JumpAmount>14</JumpAmount>
        <!--威力-->
        <Power>30</Power>
        <!--弾の発射速度-->
        <BulletRateOfFire>0.5</BulletRateOfFire>
        <!--爆弾のリロード速度-->
        <BombReloadSpeed>1</BombReloadSpeed>
        <!--重さ-->
        <Weight>3</Weight>
        <!--弾の発射に使用するエネルギー(1発あたり)-->
        <EnergyUseInBulletShot>35</EnergyUseInBulletShot>
        <!--ホバーで消費するエネルギー(毎秒)-->
        <UseEnergyInHover>70</UseEnergyInHover>
        <!--エネルギーの回復速度-->
        <EnergyRecoveryAmount>40</EnergyRecoveryAmount>
        <!--弾のサイズ-->
        <BulletSize>0.8</BulletSize>
    </MissileStatus>
    <!--プレイヤーの色（0 ～ 255のRGBA）-->
    <PlayerColor>
        <P1>0,186,255,255</P1>
        <P2>255,0,0,255</P2>
        <P3>255,220,51,255</P3>
        <P4>0,229,68,255</P4>
    </PlayerColor>
</Player>